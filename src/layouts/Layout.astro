---
import "../scss/index.scss";
import "@/styles/globals.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Inconsolata";
		src: url(/assets/fonts/inconsolata/Inconsolata-VariableFont_wdth\,wght.ttf);
	}

	@font-face {
		font-family: "Lora";
		src: url(/assets/fonts/lora/Lora-Italic-VariableFont_wght.ttf);
	}

	@font-face {
		font-family: "Inter";
		src: url(/assets/fonts/inter/Inter-VariableFont_slnt\,wght.ttf);
	}

	body {
		background-color: var(--current-800);
		color: var(--current-100);
	}

	:root {
		--accent: #a445ed;
		--error: #ff5252;

		--neutral-100: #050505;
		--neutral-200: #1f1f1f;
		--neutral-300: #2d2d2d;
		--neutral-400: #3a3a3a;
		--neutral-500: #757575;
		--neutral-600: #e9e9e9;
		--neutral-700: #f4f4f4;
		--neutral-800: #ffffff;

		--current-100: var(--neutral-100);
		--current-200: var(--neutral-200);
		--current-300: var(--neutral-300);
		--current-400: var(--neutral-400);
		--current-500: var(--neutral-500);
		--current-600: var(--neutral-600);
		--current-700: var(--neutral-700);
		--current-800: var(--neutral-800);

		--font-sans-serif: "Inter";
		--font-serif: "Lora";
		--font-mono: "Inconsolata";

		--current-font: var(--font-sans-serif);

		--fs-heading-large: 64px;
		--fs-heading-medium: 24px;
		--fs-heading-small: 20px;
		--fs-body-medium: 18px;
		--fs-body-small: 14px;

		--lh-heading-large: 77px;
		--lh-heading-medium: 29px;
		--lh-heading-small: 24px;
		--lh-body-medium: 24px;
		--lh-body-small: 17px;

		/* Tailwind variables */

		/* --background: var(--current-600); */
		--background: 100 0% 50%;
		/* --background: var(--current-100); */
		/* --background: 274 82% 60%; */
		/* --background: 0 100% 50%; */
		/* --foreground: 0 0% 3.9%; */
		--foreground: 274 82% 60%;

		--muted: 274 82% 60%;
		--muted-foreground: 274 82% 60%;
		--primary: 274 82% 60%;
		--input: 0 0% 51%;
	}
	html {
		font-family: var(--current-font);
		font-size: 100%;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--current-100: var(--neutral-800);
			--current-200: var(--neutral-700);
			--current-300: var(--neutral-600);
			--current-400: var(--neutral-500);
			--current-500: var(--neutral-400);
			--current-600: var(--neutral-300);
			--current-700: var(--neutral-200);
			--current-800: var(--neutral-100);
			--background: 0 0% 2%;
		}
	}

	@media (prefers-color-scheme: light) {
		:root {
			--current-100: var(--neutral-100);
			--current-200: var(--neutral-200);
			--current-300: var(--neutral-300);
			--current-400: var(--neutral-400);
			--current-500: var(--neutral-500);
			--current-600: var(--neutral-600);
			--current-700: var(--neutral-700);
			--current-800: var(--neutral-800);
			--background: 0 0% 100%;
		}
	}

	body[data-font-type="Serif"] {
		--current-font: var(--font-serif);
	}

	body[data-font-type="Sans-Serif"] {
		--current-font: var(--font-sans-serif);
	}

	body[data-font-type="Mono"] {
		--current-font: var(--font-mono);
	}

	body[data-color-scheme="light"] {
		--current-100: var(--neutral-100);
		--current-200: var(--neutral-200);
		--current-300: var(--neutral-300);
		--current-400: var(--neutral-400);
		--current-500: var(--neutral-500);
		--current-600: var(--neutral-600);
		--current-700: var(--neutral-700);
		--current-800: var(--neutral-800);
		--background: 0 0% 100%;
	}

	body[data-color-scheme="dark"] {
		--current-100: var(--neutral-800);
		--current-200: var(--neutral-700);
		--current-300: var(--neutral-600);
		--current-400: var(--neutral-500);
		--current-500: var(--neutral-400);
		--current-600: var(--neutral-300);
		--current-700: var(--neutral-200);
		--current-800: var(--neutral-100);
		--background: 0 0% 2%;
	}
</style>
